
<form
  id="contact-form"
  class="w-full max-w-xl mx-auto space-y-5 bg-white dark:bg-zinc-900 text-black dark:text-white p-6 md:p-8 rounded-2xl shadow-lg"
>
  <div>
    <label for="nombre" class="block text-sm font-medium mb-1"> Nombre </label>
    <input
      type="text"
      name="nombre"
      id="nombre"
      required
      placeholder="Tu nombre"
      class="w-full px-4 py-2 rounded-md bg-gray-100 dark:bg-zinc-800 placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500"
    />
  </div>

  <div>
    <label for="correo" class="block text-sm font-medium mb-1">
      Correo electrónico
    </label>
    <input
      type="email"
      name="correo"
      id="correo"
      required
      placeholder="Tu correo electrónico"
      class="w-full px-4 py-2 rounded-md bg-gray-100 dark:bg-zinc-800 placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500"
    />
  </div>

  <div>
    <label for="mensaje" class="block text-sm font-medium mb-1">
      Mensaje
    </label>
    <textarea
      name="mensaje"
      id="mensaje"
      rows="4"
      required
      placeholder="Escribe tu mensaje aquí..."
      class="w-full px-4 py-2 rounded-md bg-gray-100 dark:bg-zinc-800 placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 resize-none"
    ></textarea>
  </div>

  <div>
    <button
      id="submit-button"
      type="submit"
      class="w-full bg-purple-600 hover:bg-purple-700 transition text-white font-semibold py-2 px-4 rounded-md flex justify-center items-center"
    >
      <span id="button-text">Enviar</span>
      <span
        id="spinner"
        class="hidden animate-spin ml-2 inline-block w-4 h-4 border-2 border-t-transparent border-white rounded-full"
      ></span>
    </button>
  </div>

  <div id="form-response" class="hidden"></div>
</form>
