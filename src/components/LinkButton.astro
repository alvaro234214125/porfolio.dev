---
const { href } = Astro.props;
---

<a
  target="_blank"
  href={href}
  role="link"
  class="inline-flex items-center justify-center gap-2 px-3 py-2 text-base text-md max-w-fit rounded-xl border transition group
         bg-gray-100 text-gray-800 border-gray-300
         hover:bg-gray-800 hover:text-white hover:border-gray-900

         dark:bg-transparent dark:text-white dark:border-white/20
         dark:hover:bg-white/10 dark:hover:border-purple-400
         focus:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black"
>
  <slot />
</a>
